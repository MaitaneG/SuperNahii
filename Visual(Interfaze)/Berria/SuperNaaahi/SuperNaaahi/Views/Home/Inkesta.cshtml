@model SuperNaaahi.Models.Inkesta

@{
    ViewData["Title"] = "Inkesta";
}

<h1>Inkesta</h1>

<h4>Inkesta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Inkesta">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pertsona" class="control-label"></label>
                <input asp-for="Pertsona" class="form-control" />
                <span asp-validation-for="Pertsona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balorazioa" class="control-label"></label>
                <input asp-for="Balorazioa" class="form-control" max="10" min="0"/>
                <span asp-validation-for="Balorazioa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hobetzeko" class="control-label"></label>
                <textarea asp-for="Hobetzeko" class="form-control" ></textarea>
                <span asp-validation-for="Hobetzeko" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Gomendatu" /> @Html.DisplayNameFor(model => model.Gomendatu)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Itzuli</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
