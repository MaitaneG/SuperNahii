
@{
    ViewData["Title"] = "Foroa";
    @model SuperNaaahi.Models.Foroa
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-8">
        <br />
        @await Component.InvokeAsync("Foroa")
        <br />

    </div>
    <div class="col-4">
        <h5 class="display-5">Laga hemen zure komentarioak</h5>
        <br />
        <form asp-action="Foroa">
            <div class="form-group">

                <label asp-for="Korreoa" class="control-label"></label>
                <input asp-for="Korreoa" class="form-control" value="@User.Identity.Name" readonly />
                <span asp-validation-for="Korreoa" class="text-danger"></span>
                <br />
                <label asp-for="Komentarioa">Komentarioa</label>
                <textarea asp-for="Komentarioa" class="form-control komentarioakSartzekoLekua" id="komentarioa"></textarea>
                <span asp-validation-for="Komentarioa"></span>
            </div>

            <button type="submit" class="btn btn-primary">Komentatu</button>

        </form>
    </div>
</div>
<script>
       document.getElementById("komentarioa").value = "";
</script>



