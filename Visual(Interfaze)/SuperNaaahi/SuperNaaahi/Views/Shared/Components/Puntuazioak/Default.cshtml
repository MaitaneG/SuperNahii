@{
    @model IEnumerable<SuperNaaahi.Models.PuntuazioaModel>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Langilea</th>
            <th>Puntuazioa</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        <form>
            <select id="Jokalaria" name="Jokalaria">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="Guztiak">Guztiak</option>
            </select>
            <input type="submit" >
        </form>
        @foreach (var item in Model)
        {
            <tr id="row-@item.Id">
                <th>@Html.DisplayFor(modelItem => item.Jokalari)</th>
                <th>@Html.DisplayFor(modelItem => item.Puntuazioa)</th>
                <th>@Html.DisplayFor(modelItem => item.Data)</th>
            </tr>
        }
    </tbody>
</table>
